<UserControl x:Class="NetworkService.Views.TastaturaView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NetworkService.Views"
             xmlns:viewModel="clr-namespace:NetworkService.ViewModel"
             mc:Ignorable="d" 
             d:DesignHeight="200" 
             d:DesignWidth="400">
    <UserControl.DataContext>
        <viewModel:TastaturaViewModel/>
    </UserControl.DataContext>
    <Border CornerRadius="8" Padding="5">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="3*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <UniformGrid Rows="4" Columns="10" Margin="5">
                
                <Button Content="0" Margin="2" Command="{Binding KlikniSlovo}" CommandParameter="{Binding Content, RelativeSource={RelativeSource Self}}"/>
                <Button Content="1" Margin="2"  Command="{Binding KlikniSlovo}" CommandParameter="{Binding Content, RelativeSource={RelativeSource Self}}"/>
                <Button Content="2" Margin="2"  Command="{Binding KlikniSlovo}" CommandParameter="{Binding Content, RelativeSource={RelativeSource Self}}"/>
                <Button Content="3" Margin="2"  Command="{Binding KlikniSlovo}" CommandParameter="{Binding Content, RelativeSource={RelativeSource Self}}"/>
                <Button Content="4" Margin="2"  Command="{Binding KlikniSlovo}" CommandParameter="{Binding Content, RelativeSource={RelativeSource Self}}"/>
                <Button Content="5" Margin="2"  Command="{Binding KlikniSlovo}" CommandParameter="{Binding Content, RelativeSource={RelativeSource Self}}"/>
                <Button Content="6" Margin="2"  Command="{Binding KlikniSlovo}" CommandParameter="{Binding Content, RelativeSource={RelativeSource Self}}"/>
                <Button Content="7" Margin="2"  Command="{Binding KlikniSlovo}" CommandParameter="{Binding Content, RelativeSource={RelativeSource Self}}"/>
                <Button Content="8" Margin="2"  Command="{Binding KlikniSlovo}" CommandParameter="{Binding Content, RelativeSource={RelativeSource Self}}"/>
                <Button Content="9" Margin="2"  Command="{Binding KlikniSlovo}" CommandParameter="{Binding Content, RelativeSource={RelativeSource Self}}"/>

                <Button Content="Q" Margin="2" Command="{Binding KlikniSlovo}" CommandParameter="{Binding Content, RelativeSource={RelativeSource Self}}" IsEnabled="{Binding IsEnable}"/>
                <Button Content="W" Margin="2"  Command="{Binding KlikniSlovo}" CommandParameter="{Binding Content, RelativeSource={RelativeSource Self}}" IsEnabled="{Binding IsEnable}"/>
                <Button Content="E" Margin="2"  Command="{Binding KlikniSlovo}" CommandParameter="{Binding Content, RelativeSource={RelativeSource Self}}" IsEnabled="{Binding IsEnable}"/>
                <Button Content="R" Margin="2"  Command="{Binding KlikniSlovo}" CommandParameter="{Binding Content, RelativeSource={RelativeSource Self}}" IsEnabled="{Binding IsEnable}"/>
                <Button Content="T" Margin="2"  Command="{Binding KlikniSlovo}" CommandParameter="{Binding Content, RelativeSource={RelativeSource Self}}" IsEnabled="{Binding IsEnable}"/>
                <Button Content="Y" Margin="2"  Command="{Binding KlikniSlovo}" CommandParameter="{Binding Content, RelativeSource={RelativeSource Self}}" IsEnabled="{Binding IsEnable}"/>
                <Button Content="U" Margin="2"  Command="{Binding KlikniSlovo}" CommandParameter="{Binding Content, RelativeSource={RelativeSource Self}}" IsEnabled="{Binding IsEnable}"/>
                <Button Content="I" Margin="2"  Command="{Binding KlikniSlovo}" CommandParameter="{Binding Content, RelativeSource={RelativeSource Self}}" IsEnabled="{Binding IsEnable}"/>
                <Button Content="O" Margin="2"  Command="{Binding KlikniSlovo}" CommandParameter="{Binding Content, RelativeSource={RelativeSource Self}}" IsEnabled="{Binding IsEnable}"/>
                <Button Content="P" Margin="2"  Command="{Binding KlikniSlovo}" CommandParameter="{Binding Content, RelativeSource={RelativeSource Self}}" IsEnabled="{Binding IsEnable}"/>


                <Button Content="A" Margin="2"  Command="{Binding KlikniSlovo}" CommandParameter="{Binding Content, RelativeSource={RelativeSource Self}}" IsEnabled="{Binding IsEnable}" />
                <Button Content="S" Margin="2"  Command="{Binding KlikniSlovo}" CommandParameter="{Binding Content, RelativeSource={RelativeSource Self}}" IsEnabled="{Binding IsEnable}"/>
                <Button Content="D" Margin="2"  Command="{Binding KlikniSlovo}" CommandParameter="{Binding Content, RelativeSource={RelativeSource Self}}" IsEnabled="{Binding IsEnable}"/>
                <Button Content="F" Margin="2"  Command="{Binding KlikniSlovo}" CommandParameter="{Binding Content, RelativeSource={RelativeSource Self}}" IsEnabled="{Binding IsEnable}"/>
                <Button Content="G" Margin="2"  Command="{Binding KlikniSlovo}" CommandParameter="{Binding Content, RelativeSource={RelativeSource Self}}" IsEnabled="{Binding IsEnable}"/>
                <Button Content="H" Margin="2"  Command="{Binding KlikniSlovo}" CommandParameter="{Binding Content, RelativeSource={RelativeSource Self}}" IsEnabled="{Binding IsEnable}"/>
                <Button Content="J" Margin="2"  Command="{Binding KlikniSlovo}" CommandParameter="{Binding Content, RelativeSource={RelativeSource Self}}" IsEnabled="{Binding IsEnable}"/>
                <Button Content="K" Margin="2"  Command="{Binding KlikniSlovo}" CommandParameter="{Binding Content, RelativeSource={RelativeSource Self}}" IsEnabled="{Binding IsEnable}"/>
                <Button Content="L" Margin="2"  Command="{Binding KlikniSlovo}" CommandParameter="{Binding Content, RelativeSource={RelativeSource Self}}" IsEnabled="{Binding IsEnable}"/>
                <Button Content="⌫" Margin="2" Command="{Binding IzbrisiSlovo}"/>



                <Button Content="Z" Margin="2"  Command="{Binding KlikniSlovo}" CommandParameter="{Binding Content, RelativeSource={RelativeSource Self}}" IsEnabled="{Binding IsEnable}"/>
                <Button Content="X" Margin="2" Command="{Binding KlikniSlovo}" CommandParameter="{Binding Content, RelativeSource={RelativeSource Self}}" IsEnabled="{Binding IsEnable}"/>
                <Button Content="C" Margin="2" Command="{Binding KlikniSlovo}" CommandParameter="{Binding Content, RelativeSource={RelativeSource Self}}" IsEnabled="{Binding IsEnable}"/>
                <Button Content="V" Margin="2" Command="{Binding KlikniSlovo}" CommandParameter="{Binding Content, RelativeSource={RelativeSource Self}}" IsEnabled="{Binding IsEnable}"/>
                <Button Content="B" Margin="2" Command="{Binding KlikniSlovo}" CommandParameter="{Binding Content, RelativeSource={RelativeSource Self}}" IsEnabled="{Binding IsEnable}"/>
                <Button Content="N" Margin="2" Command="{Binding KlikniSlovo}" CommandParameter="{Binding Content, RelativeSource={RelativeSource Self}}" IsEnabled="{Binding IsEnable}"/>
                <Button Content="M" Margin="2" Command="{Binding KlikniSlovo}" CommandParameter="{Binding Content, RelativeSource={RelativeSource Self}}" IsEnabled="{Binding IsEnable}"/>
                <Button Content="." Margin="2" Command="{Binding KlikniSlovo}" CommandParameter="{Binding Content, RelativeSource={RelativeSource Self}}" IsEnabled="{Binding IsEnable}"/>
                <Button Content="," Margin="2" Command="{Binding KlikniSlovo}" CommandParameter="{Binding Content, RelativeSource={RelativeSource Self}}" IsEnabled="{Binding IsEnable}"/>
                <Button Content="Enter" Margin="2" Command="{Binding KlikniEnter}"/>

            </UniformGrid>
            <Button Content="Space" Grid.Row="1" Margin="2" Height="30" Width="375" IsEnabled="{Binding IsEnable}" Command="{Binding KlikniSlovo}" CommandParameter=" "/>
        </Grid>
    </Border>
    </UserControl>
